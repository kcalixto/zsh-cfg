" show line numbers
set number

" show incomplete commands
set showcmd

" show menu for commands on tab
set wildmenu

" set minimum lines above and below cursor position
set scrolloff=10

" line wrapping
set lbr

" keep identation
set ai

" smart/auto identation
set si

" no wrap...
set nowrap

" set clipboard to the unnamed register, instead of "+
set clipboard=unnamed

" set default ident to 4 spaces
set tabstop=4
